<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/recommend_list_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/touxiang"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/recommend_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#f00"
        android:layout_toRightOf="@+id/recommend_list_image"
        android:layout_alignTop="@+id/recommend_list_image"
        android:layout_marginLeft="6px"
        android:text="天蝎喝牛奶" />

    <TextView
        android:id="@+id/recommend_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-05-23  14:25"
        android:layout_below="@+id/recommend_list_name"
        android:layout_alignLeft="@+id/recommend_list_name"
        android:layout_marginTop="5px" />

    <TextView
        android:id="@+id/recommend_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommend_list_image"
        android:layout_alignLeft="@+id/recommend_list_image"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10dp"
        android:text="哈哈哈哈"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/recommend_list_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/jia"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/recommend_list_subtract"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/jian"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/recommend_list_report"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/jubao"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/recommend_list_link"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/lianjie"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/recommend_list_shield"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/pinbi"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="30px"
        android:visibility="gone" />

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/recommend_list_videoplayer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/recommend_list_content" />
</RelativeLayout>
