<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/draw_drawerlayout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="view.zhengxiaolong.bw.com.gittext.view.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <com.hjm.bottomtabbar.BottomTabBar
            android:layout_weight="1"
            android:id="@+id/bottom_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.hjm.bottomtabbar.BottomTabBar>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/draw_linearlayout"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_gravity="start"
        android:background="#595063"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#EDEDEF"
            android:layout_height="200dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/touxiang"
            android:id="@+id/draw_touxaing"/>
            <TextView
                android:id="@+id/draw_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/draw_touxaing"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/draw_lv"/>
    </LinearLayout>

    </android.support.v4.widget.DrawerLayout>
